{
  "name": "@bigpopakap/shared-node-tools",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "lint": "yarn lerna run lint",
    "lintfix": "yarn lerna run lintfix",
    "release-all": "yarn workspaces run semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run --concurrency 1 --stream precommit",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/travis-cli": "8.2.0",
    "@semantic-release/changelog": "3.0.5",
    "@semantic-release/commit-analyzer": "6.3.3",
    "@semantic-release/git": "7.0.18",
    "@semantic-release/github": "5.5.5",
    "@semantic-release/npm": "5.3.4",
    "@semantic-release/release-notes-generator": "7.3.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.1.0",
    "lerna": "3.18.4",
    "semantic-release": "15.13.30",
    "semantic-release-monorepo": "6.1.1",
    "semantic-release-monorepo-hooks": "2.9.5",
    "semantic-release-plugin-decorators": "2.0.0"
  }
}
