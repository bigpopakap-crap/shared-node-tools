{
  "name": "@bigpopakap/renovate-config",
  "version": "1.0.0",
  "description": "Shared RenovateBot configurations for bigpopakap's personal projects",
  "homepage": "https://github.com/bigpopakap/shared-node-tools",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigpopakap/shared-node-tools"
  },
  "scripts": {
    "lint": "yarn eslint-bigpopakap",
    "lintfix": "yarn lint --fix",
    "precommit": "lint-staged"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "assignees": [
        "bigpopakap"
      ],
      "automerge": true,
      "semanticCommits": true,
      "commitBodyTable": true,
      "commitMessageTopic": "{{depName}}",
      "packageRules": [
        {
          "packagePatterns": [
            "^eslint"
          ],
          "groupName": "eslint packages"
        },
        {
          "packagePatterns": [
            "^styleint"
          ],
          "groupName": "styelint packages"
        },
        {
          "packagePatterns": [
            "^@semantic-release",
            "^semantic-release"
          ],
          "groupName": "semantic-release packages"
        }
      ],
      "peerDependencies": {
        "enabled": true
      }
    }
  },
  "devDependencies": {
    "lint-staged": "9.4.3"
  }
}
