{
  "name": "@bigpopakap/renovate-config",
  "license": "UNLICENSED",
  "version": "1.1.0",
  "description": "RenovateBot configuration for bigpopakap's personal projects",
  "homepage": "https://github.com/bigpopakap/shared-node-tools",
  "keywords": [
    "bigpopakap",
    "Renovate",
    "RenovateBot",
    "automation"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigpopakap/shared-node-tools.git",
    "directory": "packages/renovate-config"
  },
  "bugs": "https://github.com/bigpopakap/shared-node-tools/issues",
  "engines": {
    "node": ">=12.12"
  },
  "scripts": {
    "lint": "yarn eslint-bigpopakap",
    "lintfix": "yarn lint --fix",
    "precommit": "lint-staged"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "reviewers": [
        "bigpopakap"
      ],
      "assignees": [
        "bigpopakap"
      ],
      "masterIssue": true,
      "semanticCommits": true,
      "commitBodyTable": true,
      "commitMessageTopic": "{{depName}}",
      "separateMultipleMajor": true,
      "automerge": true,
      "peerDependencies": {
        "enabled": true
      },
      "packageRules": [
        {
          "updateTypes": [
            "major"
          ],
          "automerge": true,
          "stabilityDays": 3
        },
        {
          "packagePatterns": [
            "^@[\\w-]+?\\/eslint",
            "^eslint"
          ],
          "groupName": "eslint packages"
        },
        {
          "packagePatterns": [
            "^@[\\w-]+?\\/styleint",
            "^styleint"
          ],
          "groupName": "styelint packages"
        },
        {
          "packagePatterns": [
            "^@semantic-release",
            "^semantic-release"
          ],
          "groupName": "semantic-release packages"
        }
      ]
    }
  }
}
